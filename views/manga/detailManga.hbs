    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chi tiết truyện</h5>
                        <!-- Horizontal Form -->
                        <form method="post" action="/cpanel/manga/{{manga._id}}/detailmanga/edit"
                            enctype="multipart/form-data">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Tên truyện</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="title" value="{{manga.title}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Tác giả</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="author" value="{{manga.author}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Mô tả</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="15"
                                        name="describe">{{manga.describe}}</textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Ảnh</label>
                                <div class="col-sm-10">
                                    <input type="file" class="form-control" name="image" onchange="displayImg()"
                                        id="file">
                                    <img id="img" src="{{manga.image.url}}" width="150"
                                        style="margin-top: 10px; border-radius: 10px" alt="">
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Thể loại</label>
                                <div class="col-sm-10">
                                    <select class="form-select" name="category">
                                        {{#each categories}}
                                        {{#if this.selected}}
                                        <option value="{{this._id}}" selected>{{this.title}}</option>
                                        {{else}}
                                        <option value="{{this._id}}">{{this.title}}</option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>

                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>

            </div>

        </div>
    </section>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chi tiết các chương -- Tổng số chương: {{manga.chapters.length}}</h5>
                        <!-- Horizontal Form -->
                        <select class="form-select form-select-md mb-3 form-control"
                            aria-label=".form-select-lg example" id="chapterId" onchange="getValueChapter()">
                            <option selected value="0">Chọn để xem chương</option>
                            {{#each chapters}}
                            <option value="{{this._id}}">{{this.chapter_index}}&nbsp; &ensp; &ensp; &ensp;
                                {{this.title}}
                            </option>
                            {{/each}}
                        </select>
                        <form method="post" action="" id="form-chapter" enctype=" multipart/form-data">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Tên chương</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="title" id="titleChapter" value=""
                                        onkeyup="checkChapterIndex()">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Chương số</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="chapter_index" id="numberChapter"
                                        value="" onkeyup="checkChapterIndex()">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Nội dung</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="20" name="content" id="content"
                                        onkeyup="checkChapterIndex()"></textarea>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary disabled" id="buttonCreate"
                                    onclick="onClickSubmit()">Create</button>
                                <button type="submit" class="btn btn-primary disabled" id="buttonUpdate"
                                    onclick="onClickSubmit()">Update</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>

            </div>

        </div>
    </section>


<script>
    const displayImg = () => {
        var file = document.getElementById('file').files[0];
        var reader = new FileReader();
        reader.onload = function (e) {
            var image = document.getElementById("img");
            image.src = e.target.result;
        }
        reader.readAsDataURL(file);
    }

    var listChapters = [], listChapterIndex = [];
    var dropdownSelect = document.getElementById('chapterId');
    dropdownSelect.setAttribute('disabled', true);
    // gọi api để lấy các chapter
    fetch(`/api/manga/web-sever-no-token/detail/{{manga._id}}`)
        .then(
            function (response) {
                if (response.status !== 200) {
                    console.log('Lỗi, mã lỗi ' + response.status);
                    return;
                }
                // parse response data
                response.json().then(data => {
                    listChapters = data.chapters;
                    //console.log(listChapters)
                    listChapterIndex = listChapters.map(item => { return item.chapter_index });
                    //console.log(listChapterIndex);
                    if (listChapters.length > 0) {
                        dropdownSelect.removeAttribute('disabled');
                    }
                })
            }
        )
        .catch(err => {
            console.log('Error :-S', err)
        });

    const confirmDelete = async (id) => {
        swal({
            title: "Xác nhận",
            text: "Bạn có muốn xóa không?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    deteteProduct(id);
                }
            });
    }


    var titleChapter = document.getElementById('titleChapter');
    var chapter_index = document.getElementById('numberChapter');
    var content = document.getElementById('content');
    var buttonCreate = document.getElementById('buttonCreate');
    var buttonUpdate = document.getElementById('buttonUpdate');
    var formChapter = document.getElementById('form-chapter');

    const getValueChapter = () => {
        var i = dropdownSelect.value;
        // gọi api chi tiết các chapter;
        if (i != 0) {
            //let index = responseName.indexOf(i);
            let chapter = listChapters.find(item => item._id == i);
            titleChapter.value = chapter.title
            chapter_index.value = chapter.chapter_index;
            content.value = chapter.content;
        } else {
            titleChapter.value = ""
            chapter_index.value = "";
            content.value = "";
        }

    }
    const checkChapterIndex = () => {
        var chapter_index = document.getElementById('numberChapter').value;
        var isCreate = listChapterIndex.includes(Number(chapter_index));

        //console.log(isCreate);
        if (isCreate && titleChapter.value != "" && content.value != "" && titleChapter.value != "") {
            //console.log(isCreate && !titleChapter.value == "" && !content.value == "")
            buttonCreate.classList.add('disabled');
            buttonCreate.classList.replace('btn-primary', 'btn-outline-primary');
            buttonUpdate.classList.remove('disabled');
            buttonUpdate.classList.replace('btn-outline-primary', 'btn-primary');
            var changeChapter = listChapters.find(item => item.chapter_index == chapter_index);
            //console.log(changeChapter);
            formChapter.setAttribute('action', `/cpanel/manga/update/chapter/{{manga._id}}/${changeChapter._id}`);
        } else if (!isCreate && !titleChapter.value == "" && !content.value == "" && !chapter_index == "") {
            buttonCreate.classList.remove('disabled');
            buttonCreate.classList.replace('btn-outline-primary', 'btn-primary');
            buttonUpdate.classList.replace('btn-primary', 'btn-outline-primary');
            buttonUpdate.classList.add('disabled');
            formChapter.setAttribute('action', `/cpanel/manga/add/chapter/{{manga._id}}`)
        } else {
            if (titleChapter.value == "" || content.value == "" || chapter_index == "") {
                buttonUpdate.classList.add('disabled');
                buttonCreate.classList.add('disabled');
            }

        }
    }
    const onClickSubmit = () => {
        var chapter_index = document.getElementById('numberChapter').value;
        var isCreate = listChapterIndex.includes(Number(chapter_index));
        if (isCreate) {
            swal({
                title: "Xác nhận",
                text: "Đã có chương ",
                icon: "warning",
                //buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {

                    }
                });
        }
    }



</script>
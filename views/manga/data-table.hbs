<script>
    const convertDate = (unixTimes) => {
        return new Date(unixTimes).getTime();
    }
    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }

    const deteteProduct = async (id, idchapter, nameImage) => {
        const url = `/cpanel/manga/${id}/delete/${idchapter}/${nameImage}`;
        const option = {
            method: 'get',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            const resutl = await fetchAPI(url, option);
            console.log(resutl);
            if (resutl.status) {
                swal("Đã xóa thành công!", {
                    icon: "success",
                });
                window.location.reload();
            }

        } catch (e) {
            console.log('Delete error ', e)
        }
    }
    const confirmDelete = async (id, idchapter, nameImage) => {
        swal({
            title: "Xác nhận",
            text: "Bạn có muốn xóa không?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    deteteProduct(id, idchapter, nameImage);
                }
            });
    }

    $('#sortTable').DataTable();
</script>